# ======================
# Docker 开发环境配置
# ======================

# 复制此文件为 .env 并修改相应配置
# cp env.example .env

# ======================
# 端口配置
# ======================
NGINX_PORT=8080
VUE_PORT=8081
MYSQL57_PORT=3307
MYSQL8_PORT=3308

# ======================
# MySQL 5.7 配置
# ======================
MYSQL57_ROOT_PASSWORD=root
MYSQL57_DATABASE=db57
MYSQL57_USER=user57
MYSQL57_PASSWORD=pass57

# ======================
# MySQL 8.0 配置
# ======================
MYSQL8_ROOT_PASSWORD=root
MYSQL8_DATABASE=db80
MYSQL8_USER=user80
MYSQL8_PASSWORD=pass80

# ======================
# PHP 配置
# ======================
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M
PHP_MAX_EXECUTION_TIME=300

# ======================
# 开发环境配置
# ======================
NODE_VERSION=18.19.0
VUE_CLI_VERSION=@vue/cli
COMPOSER_VERSION=latest

# ======================
# 备份配置
# ======================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
